{
  "name": "clh-web-api",
  "version": "0.0.1",
  "private": true,
  "nyc": {
    "include": [
      "app/**/*.js",
      "app.js"
    ],
    "includeAllSources": true,
    "reporter": [
      "html",
      "text",
      "text-summary"
    ],
    "report-dir": "./test-results/unit-tests"
  },
  "scripts": {
    "prestart": "rm -rf ./public && mkdir -p ./public && cp -rf ./node_modules/swagger-ui/dist/* ./public/ && cp -rf ./swagger/* ./public/",
    "start": "node ./bin/clh-web-api",
    "reset": "npm run db-clean && npm run db-start && npm start",
    "db-start": "mkdir ./.db && mongod --dbpath ./.db --fork --logpath /dev/null",
    "db-stop": "mongo admin --eval 'db.shutdownServer()' >/dev/null 2>&1 || true",
    "db-clean": "npm run db-stop && rm -rf ./.db",
    "test-unit": "nyc npm run test-unit-only",
    "test-unit-only": "NODE_ENV=test mocha './unit-tests/**/*.spec.js'",
    "test-integration": "NODE_ENV=test swagger-t-str -u http://localhost:8087 -s ./swagger/clh-web-api.yml",
    "docker-compose-up": "docker-compose up --build",
    "docker-compose-restart": "docker-compose restart",
    "docker-compose-down": "docker-compose down",
    "docker-compose-logs": "docker-compose logs",
    "docker-compose-test-unit": "docker-compose run clh-web-api npm run test-unit"
  },
  "dependencies": {
    "express": "=4.14.1",
    "mongodb": "=2.2.22",
    "mongoose": "=4.8.2",
    "passport": "=0.3.2",
    "passport-http": "=0.3.0",
    "passport-http-bearer": "=1.0.1",
    "moment": "=2.17.1",
    "uuid": "=3.0.1",
    "body-parser": "=1.16.1",
    "cookie-parser": "=1.4.3",
    "debug": "=2.6.1",
    "morgan": "=1.8.1"
  },
  "devDependencies": {
    "proxyquire": "=1.7.11",
    "mocha": "=3.2.0",
    "chai": "=3.5.0",
    "sinon": "=1.17.7",
    "sinon-chai": "=2.8.0",
    "istanbul": "=0.4.5",
    "nyc": "=10.1.2",
    "swagger-ui": "=2.2.10",
    "swagger-t-str": "=1.1.3"
  }
}

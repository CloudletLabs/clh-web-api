{
  "name": "clh-web-api",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "prestart": "rm -rf ./public && mkdir -p ./public && cp -rf ./node_modules/swagger-ui/dist/* ./public/ && cp -rf ./swagger/* ./public/",
    "start": "node ./bin/clh-web-api",
    "reset": "npm run db-clean && npm run db-start && npm start",
    "db-start": "mkdir ./.db && mongod --dbpath ./.db --fork --logpath /dev/null",
    "db-stop": "mongo admin --eval 'db.shutdownServer()' >/dev/null 2>&1 || true",
    "db-clean": "npm run db-stop && rm -rf ./.db",
    "test-unit": "NODE_ENV=test istanbul cover --print both _mocha './unit-tests/**/*.spec.js'",
    "docker-compose-up": "docker-compose up --build",
    "docker-compose-restart": "docker-compose restart",
    "docker-compose-down": "docker-compose down",
    "docker-compose-logs": "docker-compose logs",
    "docker-compose-test-unit": "docker-compose run clh-web-api npm run test-unit"
  },
  "dependencies": {
    "express": "=4.13.1",
    "mongodb": "=2.1.16",
    "mongoose": "=4.4.13",
    "passport": "=0.3.2",
    "passport-http": "=0.3.0",
    "passport-http-bearer": "=1.0.1",
    "moment": "=2.13.0",
    "node-uuid": "=1.4.7",
    "body-parser": "=1.13.2",
    "cookie-parser": "=1.3.5",
    "debug": "=2.2.0",
    "morgan": "=1.6.1"
  },
  "devDependencies": {
    "mocha": "=3.0.2",
    "chai": "=3.5.0",
    "sinon": "=1.17.5",
    "istanbul": "=0.4.5",
    "swagger-ui": "=2.2.8"
  }
}

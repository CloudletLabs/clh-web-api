{
  "name": "clh-web-api",
  "version": "0.0.1",
  "private": true,
  "nyc": {
    "include": [
      "app/**/*.js",
      "app.js"
    ],
    "includeAllSources": true,
    "reporter": [
      "html",
      "text",
      "text-summary"
    ],
    "report-dir": "./test-results/unit-tests"
  },
  "scripts": {
    "public-clean": "rm -rf ./public && mkdir -p ./public",
    "public-add-swagger": "cp -rf ./node_modules/swagger-ui/dist/* ./public/ && cp -rf ./swagger/* ./public/",
    "prestart": "npm run public-clean && npm run public-add-swagger",
    "start": "node ./bin/clh-web-api",
    "test-unit": "NODE_ENV=test nyc mocha './unit-tests/**/*.spec.js'",
    "test-integration": "npm run test-integration--runner -- -u http://localhost:8087 -s ./swagger/clh-web-api.yml",
    "test-integration-runner": "NODE_ENV=test swagger-t-str",
    "dc": "docker-compose -f ./docker-compose.yml -f ./docker-compose.local.yml",
    "dc-build": "npm run dc -- build",
    "dc-up": "npm run dc -- up",
    "dc-restart": "npm run dc -- restart",
    "dc-rebuild": "npm run dc-build && npm run dc-restart",
    "dc-down": "npm run dc -- down",
    "dc-test-unit": "npm run dc -- run --no-deps --rm clh-web-api npm run test-unit",
    "dc-swagger": "npm run dc -- -f ./docker-compose.swagger.yml run --rm clh-web-swagger",
    "dc-test-integration": "npm run dc-test-integration-runner -- -u http://clh-web-api:8087 -s ./swagger/clh-web-api.yml",
    "dc-test-integration-runner": "npm run dc-swagger -- npm run test-integration-runner"
  },
  "dependencies": {
    "express": "=4.14.1",
    "mongodb": "=2.2.22",
    "mongoose": "=4.8.2",
    "passport": "=0.3.2",
    "passport-http": "=0.3.0",
    "passport-http-bearer": "=1.0.1",
    "moment": "=2.17.1",
    "uuid": "=3.0.1",
    "body-parser": "=1.16.1",
    "cookie-parser": "=1.4.3",
    "debug": "=2.6.1",
    "morgan": "=1.8.1"
  },
  "devDependencies": {
    "proxyquire": "=1.7.11",
    "mocha": "=3.2.0",
    "chai": "=3.5.0",
    "sinon": "=1.17.7",
    "sinon-chai": "=2.8.0",
    "istanbul": "=0.4.5",
    "nyc": "=10.1.2",
    "swagger-ui": "=2.2.10",
    "swagger-t-str": "=1.1.4"
  }
}

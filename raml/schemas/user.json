{
  "$schema": "http://json-schema.org/draft-04/schema",
  "type": "object",
  "required": true,
  "properties": {
    "username": {
      "type": "string",
      "required": true
    },
    "password": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "string",
      "required": true
    },
    "name": {
      "type": "string",
      "required": true
    },
    "avatar": {
      "type": "string",
      "required": true
    },
    "roles": {
      "type": "array",
      "required": true,
      "items": {
        "type": "object",
        "properties": {
          "roleId": {
            "type": "string",
            "required": true
          },
          "displayName": {
            "type": "string",
            "required": true
          }
        }
      }
    },
    "token": {
      "type": "object",
      "required": true,
      "properties": {
        "auth_token": {
          "type": "string",
          "required": true
        },
        "createDate": {
          "type": "string",
          "required": true
        }
      }
    }
  }
}